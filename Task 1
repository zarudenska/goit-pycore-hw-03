from datetime import datetime

def get_days_from_today(date_text):
    try:
        # Перетворюємо текст у дату (формат РРРР-ММ-ДД)
        user_date = datetime.strptime(date_text, "%Y-%m-%d").date()
    except ValueError:
        print("Введіть дату у форматі РРРР-ММ-ДД, наприклад 2022-02-24")

    # Отримуємо сьогоднішню дату
    today = datetime.today().date()

    # Обчислюємо різницю у днях
    days_passed = (today - user_date).days
    return days_passed

    # Виводимо результат
    print("Від цієї дати минуло", days_passed, "днів.")
