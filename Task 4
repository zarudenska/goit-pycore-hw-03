from datetime import datetime, timedelta

def get_upcoming_birthdays(users):
    today = datetime.today().date()
    upcoming_birthdays = []  # Сюди будемо записувати, кого треба привітати

    for user in users:
        # 1. Отримуємо дату народження користувача
        birthday = datetime.strptime(user["birthday"], "%Y.%m.%d").date()

        # 2. Змінюємо рік народження на поточний
        birthday_this_year = birthday.replace(year=today.year)

        # 3. Якщо день народження вже минув, переносимо на наступний рік
        if birthday_this_year < today:
            birthday_this_year = birthday_this_year.replace(year=today.year + 1)

        # 4. Рахуємо, скільки днів залишилося до дня народження
        days_until_birthday = (birthday_this_year - today).days

        # 5. Якщо день народження протягом 7 днів
        if 0 <= days_until_birthday <= 7:
            congratulation_date = birthday_this_year

            # 6. Якщо припадає на вихідні (субота або неділя) — переносимо на понеділок
            if congratulation_date.weekday() == 5:  # субота
                congratulation_date += timedelta(days=2)
            elif congratulation_date.weekday() == 6:  # неділя
                congratulation_date += timedelta(days=1)

            # 7. Додаємо користувача до списку
            upcoming_birthdays.append({
                "name": user["name"],
                "congratulation_date": congratulation_date.strftime("%Y.%m.%d")
            })

    return upcoming_birthdays

users = [
    {"name": "John Doe", "birthday": "1985.11.23"},
    {"name": "Jane Smith", "birthday": "1990.11.18"},
    {"name": "Alex Brown", "birthday": "1989.11.15"},
    {"name": "Emily Davis", "birthday": "1992.11.21"}
]

upcoming_birthdays = get_upcoming_birthdays(users)
print("Список привітань на цьому тижні:")
print(upcoming_birthdays)


