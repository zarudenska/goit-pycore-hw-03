import random

def get_numbers_ticket(min_num, max_num, quantity):
    # Перевіряємо, чи введені параметри коректні
    if min_num < 1 or max_num > 1000 or quantity < 1:
        print("Помилка: числа повинні бути від 1 до 1000, а кількість — не менше 1.")
        return []
    
    # Якщо кількість більша, ніж може бути у діапазоні
    if quantity > (max_num - min_num + 1):
        print("Помилка: кількість чисел більша, ніж доступний діапазон.")
        return []
    
    # Генеруємо унікальні випадкові числа
    numbers = random.sample(range(min_num, max_num + 1), quantity)
    
    # Сортуємо числа
    numbers.sort()
    
    # Повертаємо готовий список
    return numbers


# --- Перевірка роботи функції ---
lottery_numbers = get_numbers_ticket(1, 49, 6)
print("Ваші лотерейні числа:", lottery_numbers)
